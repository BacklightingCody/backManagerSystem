{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // "extends": "./tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
